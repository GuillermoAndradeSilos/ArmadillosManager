@model ArmadillosManager.Models.ViewModels.GestionarResponsablesViewModel
@{
    Layout = "_Layout";
}
<body>

    <!--Parte de Arriba-->
    <h1>Gestion de Responsables</h1>
    <nav>
        <a href="~/Responsable/AgregarResponsable">
            <button>Nuevo Responsable</button>
        </a>
    </nav>
    <hr>

    <!--Filtros-->
    <input placeholder="Buscar" />

    <!--Tabla-->
    <h2>Responsables Registrados</h2>
    <table>
        <tr>
            <th>Id</th>
            <th>Responsable</th>
            <th>RFC</th>
            <th>Correo Electronico</th>
            <th>*</th>
        </tr>
        @foreach (var item in Model.Responsables)
        {
            <tr>
                <td>@item.Id</td>
                <td>
                    <h6>@item.Nombre</h6>
                    <ul>
                        <li>@item.Direccion</li>
                        <li>@item.Telefono</li>
                    </ul>
                </td>
                <td>@item.Rfc</td>
                <td>@item.Correo</td>
                <td><Button>Gestionar</Button></td>
            </tr>
        }
    </table>

</body>