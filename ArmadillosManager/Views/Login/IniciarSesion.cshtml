@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model ArmadillosManager.Models.Login
@{
}
<body>
    <h1>Iniciar Sesión</h1>

    <form method="post" action="~/login/IniciarSesion">
        <label>Usuario:</label>
        <input id="txtUserName" type="text" asp-for="UserName" /><br />
        <label>Contraseña:</label>
        <input id="txtPassword" type="text" asp-for="Password" />
        <br />
        @Html.ValidationSummary()
        <input type="submit" value="Ingresar" />
    </form>
</body>